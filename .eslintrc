{
  "extends": "airbnb",

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "parser": "babel-eslint",

  "plugins": [
    "import", "react"
  ],

  "rules": {
    "import/no-extraneous-dependencies": "off",
    "indent": [2, 2, {"SwitchCase": 1}],
    "max-len": [1, 100],
    "no-alert": 0,
    "no-console": 0,
    "no-param-reassign": 0,
    "no-return-assign": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 1,
    "no-useless-escape": 0,
    "react/forbid-prop-types": [1, { "forbid": ['any'] }],
    "react/jsx-no-bind": [0, {}],
    "react/prefer-stateless-function": [0, { "ignorePureComponents": true }],
  },
}
